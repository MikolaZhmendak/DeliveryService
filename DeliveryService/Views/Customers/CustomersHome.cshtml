    <style>
        #map {
            height: 600px;
            width: 800px;
        }
    </style>

    <div class="row">

        <div id="map"></div>
        <script>
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: { lat: 42.987162, lng: -87.903224 },
                    mapTypeId: google.maps.MapTypeId.SATELLITE,
                    zoom: 14
                });


                addMarker({
                    coords: { lat: 42.987162, lng: -87.903224 },
                    iconImage: 'http://maps.google.com/mapfiles/kml/shapes/man.png',
                    content: '<h2></h2>'
                });

                var contentString = '<div id="content">' +
         '<div id="siteNotice">' +
         '</div>' +
         '<h1 id="firstHeading" class="firstHeading">Civiche</h1>' +
         '<div id="bodyContent">' +

         '<p>Click here to see menu <a href="https://c-viche.com/menu">' +
         'https://c-viche.com/menu</a> ' +

         '</div>' +
         '</div>';
                addMarker({
                    coords: { lat: 43.005100, lng: -87.906282 },
                    iconImage: 'http://maps.google.com/mapfiles/kml/shapes/dining.png',
                    content: contentString



                });


                var contentString2 = '<div id="content">' +
    '<div id="siteNotice">' +
    '</div>' +
    '<h1 id="firstHeading" class="firstHeading">Hue</h1>' +
    '<div id="bodyContent">' +

    '<p>Click here to see menu <a href="https://huerestaurants.com/hue-bay-view-2/food/">' +
    'https://huerestaurants.com/hue-bay-view-2/food/' +

    '</div>' +
    '</div>';
                addMarker({
                    coords: { lat: 43.002011, lng: -87.903221 },
                    iconImage: 'http://maps.google.com/mapfiles/kml/shapes/dining.png',
                    content: contentString2
                });

                var contentString1 = '<div id="content">' +
    '<div id="siteNotice">' +
    '</div>' +
    '<h1 id="firstHeading" class="firstHeading">Odd Duck</h1>' +
    '<div id="bodyContent">' +

    '<p>Click here to see menu <a href="https://oddduckrestaurant.com">' +
    'https://oddduckrestaurant.com/</a> ' +

    '</div>' +
    '</div>';
                addMarker({
                    coords: { lat: 43.003483, lng: -87.904440 },
                    iconImage: 'http://maps.google.com/mapfiles/kml/shapes/dining.png',
                    content: contentString1
                });

                function addMarker(props) {

                    //  var image = 'http://maps.google.com/mapfiles/kml/shapes/man.png';
                    var marker = new google.maps.Marker({
                        position: props.coords,
                        map: map,
                        icon: props.iconImage

                    });


                    if (props.content) {
                        var infoWindow = new google.maps.InfoWindow({
                            content: props.content
                        });
                        marker.addListener('click', function () {
                            infoWindow.open(map, marker)
                        });

                    }
                }
            }



        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDAVUCRfT4tOXt1ThRoWc4SSPBgVUXkUP4&callback=initMap">
        </script>
    </div>
