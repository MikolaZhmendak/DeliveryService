@model IEnumerable<DeliveryService.Models.OrderDriverView>

@{
    ViewBag.Title = "AcceptedOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AcceptedOrders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemOrdered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurbeSide)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WalkIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tips)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemOrdered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurbeSide)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WalkIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tips)
            </td>
            </tr>
    }
            </table>

